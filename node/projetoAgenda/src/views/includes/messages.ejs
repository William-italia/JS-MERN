<!-- ðŸ’¬ MENSAGENS DE REGISTRO -->
<% if (registerErrors && registerErrors.length > 0) { %>
  <div class="box-msg error">
    <p>
      <% registerErrors.forEach(erro => { %>
        <%= erro %><br>
      <% }) %>
    </p>
  </div>
<% } %>

<% if (registerSuccess && registerSuccess.length > 0) { %>
  <div class="box-msg ok">
    <p>
      <% registerSuccess.forEach(ok => { %>
        <%= ok %><br>
      <% }) %>
    </p>
  </div>
<% } %>

