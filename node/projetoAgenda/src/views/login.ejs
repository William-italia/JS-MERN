<%- include('includes/head'); %>

<div class="container">

      <div class="box-titulo">
        <h1 class="titulo">Criar Conta / Entrar</h1>
        <p>Abaixo você pode Criar sua conta ou entrar</p>
      </div>

      <%- include('includes/messages'); %>

      <div class="container-forms">
        <!-- criar -->
        <div class="box-form">
          <h3>Criar Conta</h3>
          <p>Se ainda não tem uma conta, use o formulário abaixo para criar</p>

          <form action="/login/register" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="box-input">
              <label>Email</label>
              <input type="email" placeholder="Email" name="email">
            </div>
            <div class="box-input">
              <label for="pass">Senha</label>
              <input type="password" name="password">
            </div>
            <button class="btn-login">Criar Minha Conta</button>
          </form>

        </div>

        <!-- entrar -->
        <div class="box-form">
          <h3>Login</h3>
          <p>Se já possuir uma conta, faça login abaixo.</p>
          <form action="/login/user" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="box-input">
              <label>Email</label>
              <input type="email" placeholder="Email" name="email">
            </div>
            <div class="box-input">
              <label>Senha</label>
              <input type="password" name="password">
            </div>
            <button class="btn-login">Entrar</button>
          </form>

        </div>

      </div>
       
    </div>
    <script src="./assets/js/bundle.js"></script>

<%- include('includes/footer'); %>